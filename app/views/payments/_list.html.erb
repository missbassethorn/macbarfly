<table class='table table-striped table-hover table-condensed'>
  <thead>
    <tr>
      <th>Entry Date</th>
      <th>Band Member</th>
      <th class="money">Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @list.each do |payment| %>
      <tr>
        <td><%= payment.paid_on.strftime('%d-%b-%Y') %></td>
        <td><%= payment.person.full_name %></td>
        <td class="money"><%= number_to_currency(payment.amount) %></td>
      </tr>
    <% end %>
  </tbody>
</table>