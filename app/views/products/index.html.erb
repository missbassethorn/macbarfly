<h1>Stuff we sell</h1>

<%= link_to 'Home', root_path%> | <%= link_to 'Band members', people_path %>

<hr/>

<p>
	<%= link_to 'Add new', new_product_path %>
</p>


<div style='width: 30%'>
	<table class='table table-striped table-hover table-condensed'>
		<tbody>
			<% @list.each do |product| %>
				<tr>
					<td>
						<%= product.description %> (<%= number_to_currency(product.cost) %>)
					</td>

					<td>
					<%= link_to edit_product_path(product), title: "Edit" do %>
						<span class="glyphicon glyphicon-pencil"></span>
					<% end %>
					</td>

					<td>
						<%= link_to product_path(product), title: "Delete", method: :delete, data: { confirm: 'Are you sure?' } do  %>
							<span class="glyphicon glyphicon-remove"></span>
						<% end %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>