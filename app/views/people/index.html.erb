<h1>Band Members</h1>

<%= link_to 'Home', root_path %> | <%= link_to 'Stuff we sell', products_path %>
<hr/>

<p>
	<%= link_to 'Add new', new_person_path %> |
	<% if @show_deleted %>
		<%= link_to 'Show current members', people_path %>
	<% else %>
		<%= link_to 'Show past members', people_path(show_deleted: true) %>
	<% end %>
</p>

<div style='width: 40%'>
	<table class='table table-striped table-hover table-condensed'>
		<tbody>
			<% @list.each do |person| %>
				<tr>
					<td><%= person.display_name %></td>

					<% if @show_deleted %>
						<td>
							<%= button_to "Reinstate", reinstate_person_path(person), class: "btn btn-info", data: { confirm: "Are you sure you want to reinstate #{person.full_name}?" } %>
						</td>
					<% else %>
						<td>
							<%= link_to edit_person_path(person) do %>
								<span class="glyphicon glyphicon-pencil"></span>
							<% end %>
						</td>

						<td>
							<%= link_to person_path(person), method: :delete, data: { confirm: "Are you sure you want to retire #{person.full_name}?" } do  %>
								<span class="glyphicon glyphicon-remove"></span>
							<% end %>
						</td>
					<% end %>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>